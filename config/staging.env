# Claude Code Router - Staging Environment Configuration (Free Tier)
# This configuration is optimized for GCP free tier deployment

# GCP Configuration (Free Tier Regions Only)
PROJECT_ID=your-staging-project-id-here
REGION=us-central1  # Free tier eligible region
ZONE=us-central1-b  # Different zone from production
# Alternative free tier regions: us-east1, us-west1

# Instance Configuration (Free Tier)
MACHINE_TYPE=e2-micro
DISK_SIZE=30GB
DISK_TYPE=pd-standard

# Application Configuration
NODE_ENV=staging
PORT=3456
LOG_LEVEL=debug

# Security Configuration (Free Tier Optimized)
API_KEY_SECRET_NAME=claude-router-staging-api-key
RATE_LIMIT_MAX=50  # Slightly higher for testing
RATE_LIMIT_WINDOW=60000
MAX_CONNECTIONS=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Notification Configuration (Optional)
# Set this to receive email alerts for issues
NOTIFICATION_EMAIL=

# Free Tier Limits and Warnings
# DO NOT CHANGE THESE VALUES - They ensure free tier compliance
MAX_MEMORY_MB=800
MAX_DISK_GB=30
MAX_INSTANCES=1

# Cost Protection
BUDGET_AMOUNT_USD=1
BUDGET_ALERT_THRESHOLDS=50,90,100

# Environment Specific Settings
ENVIRONMENT=staging
LOG_RETENTION_DAYS=3
BACKUP_ENABLED=false

# Application Specific Configuration
NON_INTERACTIVE_MODE=true
API_TIMEOUT_MS=300000

# Resource Naming
# These will be prefixed with PROJECT_ID automatically
RESOURCE_PREFIX=claude-router-staging